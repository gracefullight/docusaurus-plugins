{
  "name": "@gracefullight/docusaurus-plugins",
  "version": "0.3.0",
  "private": true,
  "repository": "https://github.com/gracefullight/docusaurus-plugins",
  "author": {
    "name": "gracefullight",
    "email": "gracefullight.dev@gmail.com"
  },
  "scripts": {
    "build": "turbo run build",
    "cmd": "tsx scripts/index.ts",
    "dev": "turbo run dev --parallel",
    "format": "biome format --write .",
    "lint": "biome check --fix --unsafe --no-errors-on-unmatched",
    "prepare": "husky",
    "publish-packages": "turbo run build lint && changeset version && changeset publish",
    "sort-package-json": "sort-package-json \"package.json\" \"packages/*/package.json\""
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@types/fs-extra": "^11.0.4",
    "clipanion": "4.0.0-rc.4",
    "devmoji": "^2.3.0",
    "es-toolkit": "^1.38.0",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "sort-package-json": "^3.2.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "turbo": "^2.5.4"
  },
  "engines": {
    "node": "22",
    "pnpm": "10"
  }
}
